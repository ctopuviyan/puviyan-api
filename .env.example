# Server Configuration
NODE_ENV=development
PORT=8080
API_VERSION=v1

# Firebase Configuration
FIREBASE_PROJECT_ID=puviyan-prod
FIREBASE_SERVICE_ACCOUNT_PATH=./service-account.json

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=15m

# Partner API Configuration
PARTNER_API_KEY_SALT=your-partner-api-key-salt-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redemption Configuration
REDEMPTION_TOKEN_EXPIRY=300
MAX_REDEMPTION_AMOUNT=5000
MIN_REDEMPTION_POINTS=100

# Points Configuration
POINTS_TO_CURRENCY_RATE=10

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://puviyan.com

# Logging
LOG_LEVEL=info
